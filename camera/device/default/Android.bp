        "android.hardware.graphics.mapper@4.0",
        "android.hidl.allocator@1.0",
        "android.hidl.memory@1.0",
        "libbinder_ndk",
        "libcamera_metadata",
        "libcutils",
        "libexif",
        "libfmq",
        "libgralloctypes",
        "libhardware",
        "libhidlbase",
        "libhidlmemory",
        "libjpeg",
