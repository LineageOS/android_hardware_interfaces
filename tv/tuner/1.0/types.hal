    /* 7/15 conv. code rate */
    FEC_7_15 = 1 << 17,
    /* 8/9 conv. code rate */
    FEC_8_9 = 1 << 18,
    /* 8/15 conv. code rate */
    FEC_8_15 = 1 << 19,
    /* 9/10 conv. code rate */
    FEC_9_10 = 1 << 20,
    /* 9/20 conv. code rate */
    FEC_9_20 = 1 << 21,
