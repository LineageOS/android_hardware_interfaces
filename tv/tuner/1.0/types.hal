    /* 3/5 conv. code rate */
    FEC_3_5 = 1 << 9,
    /* 4/5 conv. code rate */
    FEC_4_5 = 1 << 10,
    /* 4/15 conv. code rate */
    FEC_4_15 = 1 << 11,
    /* 5/6 conv. code rate */
    FEC_5_6 = 1 << 12,
    /* 5/9 conv. code rate */
    FEC_5_9 = 1 << 13,
    /* 6/7 conv. code rate */
    FEC_6_7 = 1 << 14,
